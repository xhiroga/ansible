    "version": "0.2.0",
    "configurations": [
        {
            "name": "ansible-playbook",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/ansible-playbook",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/test/lib:${workspaceFolder}/lib"
            },
            "args": [
                "${file}"
            ],
        },
        // Debug
        {
            "name": "ping",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/ansible",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/test/lib:${workspaceFolder}/lib"
            },
            "args": [
                "localhost",
                "-m",
                "ping"
            ],
        }
    ]
}